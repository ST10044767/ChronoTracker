<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/watch_image"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:contentDescription="Watch Image"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/watch_movement"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_color"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Movement: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_year"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_movement"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Year: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_name"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="49dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Name"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_color"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_name"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Colour: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_price"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_year"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Price"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="115dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:text="Back" />

</RelativeLayout>
