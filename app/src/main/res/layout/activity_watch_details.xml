<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/watch_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Watch Image"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/watch_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="#333333"
        android:hint="Colour: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/watch_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_image"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:background="#333333"
        android:hint="Name"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#F4F4F4"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_movement"
        android:layout_alignParentStart="true"
        android:layout_marginTop="7dp"
        android:background="#333333"
        android:hint="Year: "
        android:padding="8dp"
        android:text="Year: "
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/watch_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_year"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="#333333"
        android:hint="Price"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/watch_movement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_color"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="#333333"
        android:hint="Movement: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:id="@+id/edit_details_button"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="#333333"
        android:padding="8dp"
        android:text="Edit Details"
        android:textColor="#FFFFFF" />
</RelativeLayout>
