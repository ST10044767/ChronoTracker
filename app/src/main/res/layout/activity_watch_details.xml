<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <Button
        android:id="@+id/backBtn3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/backrrow" />

    <ImageView
        android:id="@+id/watch_image"
        android:layout_width="match_parent"
        android:layout_height="208dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="62dp"
        android:contentDescription="Watch Image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/watch_movement"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_color"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Movement: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_color"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_name"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Colour: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_price"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_year"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Price"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_year"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_movement"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Year: "
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/watch_name"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_below="@id/watch_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/righteous"
        android:hint="Name"
        android:padding="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/righteous"
        android:text="Watch Details"
        android:textColor="#ECE9E9"
        android:textSize="24sp" />

</RelativeLayout>
