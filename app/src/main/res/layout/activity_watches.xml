<!-- activity_watch.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Watches">

    <Button
        android:id="@+id/backBtn9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/backrrow" />

    <Button
        android:id="@+id/addWatchButton"
        android:layout_width="141dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="248dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/righteous"
        android:text="Add Watch" />

    <ListView
        android:id="@+id/watchListView"
        android:layout_width="408dp"
        android:layout_height="539dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button_background" />

    <Button
        android:id="@+id/deleteWatch"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="132dp"
        android:fontFamily="@font/righteous"
        android:text="Delete" />

    <SearchView
        android:layout_width="303dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/button_background" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/righteous"
        android:text="Watches"
        android:textColor="#F6F6F6"
        android:textSize="24sp" />

</RelativeLayout>
