<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <TextView
        android:id="@+id/goal_number_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Set Goal (Number of Watches):"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/goal_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_number_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:hint="Enter number"
        android:inputType="number"
        android:textColorHint="#F6F6F6" />

    <TextView
        android:id="@+id/goal_watch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_number_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="82dp"
        android:hint="Set Goal (Next Watch to Collect):"
        android:textColorHint="#E1DDDD"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/goal_watch_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_watch_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:hint="Enter watch model/brand"
        android:textColorHint="#F6F6F6" />

    <Button
        android:id="@+id/save_goal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goal_watch_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="258dp"
        android:text="Save Goal" />

    <TextView
        android:id="@+id/current_goals"
        android:layout_width="215dp"
        android:layout_height="46dp"
        android:layout_below="@id/save_goal_button"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="101dp"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="352dp"
        android:layout_height="232dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
